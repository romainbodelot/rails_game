<!DOCTYPE html>
<html>

  <head>
    <title>RailsGaame</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_url %>">Rails Game</a>
        </div>

        <div id="navbar" class="navbar-collapse collapse">

          <ul class="nav navbar-nav">
            <li>
              <a href="<%= tournaments_path %>">Tournaments</a>
            </li>
            <li>
              <a href="<%= games_path %>">Games</a>
            </li>
            <li>
              <a href="<%= rankings_path %>">Rankings</a>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sign
                <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% if player_signed_in? %>
                  <% profil_path = player_path(current_player) %>
                  <% else %>
                    <% profil_path = "#" %><% end %>
                    <li>
                      <a href="<%= profil_path %>">Profil</a>
                    </li>
                    <li>
                      <a href="<%= notifications_path %>">
                        Notification <span class="badge"><%= Notification.where(:actor_id => current_player).size %></span>
                      </a>
                    </li>
                    <li><%= render 'devise/menu/registration_items' %></li>
                    <li><%= render 'devise/menu/login_items' %></li>
                  </ul>
                </li>
              </ul>

            </div>
          </div>
        </nav>

        <div class="container theme-showcase" role="main">
          <%= yield %>
        </div>

      </body>

    </html>
