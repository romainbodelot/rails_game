<div class="page-header">
  <h1>All Games</h1>
</div>

<div class="row">
  <div class="col-sm-4">
    <% i = 0 %>
      <% @games.each do |game| %>
        <% i = i + 1 %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%= link_to game.name, game_path(game)%>
              </h3>
            </div>
            <div class="panel-body">
              <%= "Description: #{game.description}" %><br/>
            </div>
          </div>
          <% if i%3 == 0 %>
          </div>
          <div class="col-sm-4">
          <% end %>
        <% end %>
      </div>
    </div>

    <a class="pull-right" href="<%= new_game_path %>">
      <button type="button" class="btn btn-sm btn-default"><%= fa_icon "plus 2x" %><%= fa_icon "gamepad 2x" %></button>
    </a>
