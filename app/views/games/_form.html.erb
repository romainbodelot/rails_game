<%= form_for(@game) do |f| %>
<ul>
  <% @game.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :name %><br/>
  <%= f.text_field :name, :required => 'required', :class => "alphanumeric" %>
</p>
<p>
  <%= f.label :description %><br/>
  <%= f.text_area :description, :required => 'required', :class => "alphanumeric" %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= javascript_include_tag( 'control' ) %>
