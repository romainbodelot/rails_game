<%= form_for(@player) do |f| %>
<ul>
  <% @player.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :first_name %><br/>
  <%= f.text_area :first_name, size: "27x1" %>
</p>
<p>
  <%= f.label :last_name %><br/>
  <%= f.text_area :last_name, size: "27x1" %>
</p>
<p>
  <%= f.label :address %><br/>
  <%= f.text_area :address, size: "27x1" %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
